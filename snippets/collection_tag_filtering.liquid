<div class="blog_tag_filtering">
  <div class="category_wrapper border-2 border-gray-300 rounded-xl p-4">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold">Tags</h2>
      <a class="text-sm inline  underline lowercase hover:text-blue-500 text-blue-400" href="{{ collection.url  }}">Clear</a>
    </div>
    <div class="blog_tags flex justify-center gap-2 flex-wrap">
      {% if collection.all_tags.size > 0 %}
        {% for tag in collection.all_tags %}
          {% if current_tags contains tag %}
            <span class="active_tag">{{ tag | link_to_remove_tag: tag }}</span>
          {% else %}
            <span class="tag">{{ tag | link_to_add_tag: tag }}</span>
          {% endif %}

        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>