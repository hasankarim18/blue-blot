{%- assign product = all_products[section.settings.featured_product] -%}


<section class="grid gap-4 grid-cols-1 my_container md:grid-cols-2 my-10">
  <div class="f_p_media">
    <div>
      {% render 'product-feature-media-template-1'
        , media: product.featured_media %}
    </div>
    <div class=" grid grid-cols-3 gap-2">
      {%- render 'product-media-carousal'
        , product: product -%}
    </div>
  </div>

  <div class="f_p_form">

    <div>
      <h2 class="text-xl">
        {{ product.title }}
      </h2>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Feature P. Section-1",
    "tag": "section",
    "settings": [
      {
        "type": "product",
        "id": "featured_product",
        "label": "Featured Product"

      }
    ],
    "presets": [
      {
        "name": "Feature P. Section-1",
        "settings": {}
      }
    ]
  }
{% endschema %}