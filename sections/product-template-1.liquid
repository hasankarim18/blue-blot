        },
        {
          "type": "related_products",
          "name": "*Related Products"
        },
        {
          "type": "featured_product",
          "name": "*Featured Product"
        }
      ],
      "presets": [
        {
          "name": "Product template 1",
          "settings": {}
        }
      ]
    }
  {% endschema %}