    {
      "name": "Product template 1",
      "tag": "section",
      "settings": [],
      "blocks": [
        {
          "type": "@app"
        },
        {
          "type": "title",
          "name": "Product title",
          "limit": 1
        },
        {
          "type": "is_available",
          "name": "Is product available",
          "limit": 1
        },
        {
          "type": "category",
          "name": "Product category",
          "limit": 1
        },
        {
          "type": "collections",
          "name": "collections product have",
          "limit": 1
        },
        {
          "type": "price",
          "name": "Product Price",
          "limit": 1
        },
        {
          "type": "varaint_selector",
          "name": "Variant Selector",
          "settings": [
            {
              "type": "select",
              "id": "variant_selector_type",
              "label": "Variant selector type",
              "default": "select",
              "options": [
                {
                  "label": "Select type",
                  "value": "select"
